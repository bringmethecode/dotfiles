#window {
    anchor: north;
    location: north;
    position: north;
    width: 100%;
    padding: 14px 36px 16px 48px;
    children: [ horibox ];
    background-color: #090909;
}

#horibox {
orientation: horizontal;
children:   [ entry, listview ];
}

#listview {
layout:     horizontal;
spacing:    4px;
lines:      100;
}

#entry {
color:      rgba(0, 0, 0, 0);
expand:     false;
width:      0;
}

#element {
padding-right: 2px;
color: #ffffff44;
}

#element selected {
color: #ffffffff;
}
